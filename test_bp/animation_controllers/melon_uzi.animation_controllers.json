{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.melon_uzi": {
            "initial_state": "idle",
            "states": {
                "idle": {
                    "transitions": [
                        { "shooting": "q.get_equipped_item_name('main_hand') == 'melon_uzi' && q.is_using_item" }
                    ]
                },
                "shooting": {
                    "on_entry": [
                        "/playsound test.melon_uzi.shoot @s ~ ~ ~ 2",
                        "@s test:on_shoot_melon_uzi"
                    ],
                    "transitions": [
                        { "delay": "(1.0)" }
                    ]
                },
                "delay": {
                    "on_entry": [
                        "v.delay = q.time_stamp + 5;"
                    ],
                    "transitions": [
                        { "idle": "q.get_equipped_item_name('main_hand') != 'melon_uzi' || !q.is_using_item" },
                        { "shooting": "q.time_stamp >= v.delay"}
                    ]
                }
            }
        }
    }
}