{
    "format_version": "1.10.0",
    "animation_controllers": {
        "controller.animation.melon_uzi.use": {
            "initial_state": "default",
            "states": {
                "default": {
                    "transitions": [
                        { "shooting": "q.is_item_name_any('slot.weapon.mainhand', 'test:melon_uzi') && q.is_using_item" }
                    ]
                },
                "shooting": {
                    "on_entry": [
                        "v.melon_uzi_cooldown = q.life_time + 0.25;",

                        "/execute @s ~ ~ ~ playsound test.melon_uzi.shoot @a ~ ~ ~ 2",
                        "@s test:on_shoot_melon_uzi"
                    ],
                    "transitions": [
                        { "default": "q.life_time >= v.melon_uzi_cooldown" }
                    ]
                }
            }
        }
    }
}