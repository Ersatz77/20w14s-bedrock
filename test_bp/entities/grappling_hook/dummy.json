{
    "format_version": "1.18.0",
    "minecraft:entity": {
        "description": {
            "identifier": "test:grappling_hook_dummy",
            "is_summonable": true,
            "is_spawnable": false,
            "is_experimental": false,
            "animations": {
                "init_controller": "controller.animation.grappling_hook.init",
                "check_hook": "animation.grappling_hook.check_for_hook"
            },
            "scripts": {
                "animate": [
                    "init_controller",
                    "check_hook"
                ]
            }
        },
        "component_groups": {
            "test:init": {
                "minecraft:is_charged": {}
            },
            "test:add_seat": {
                "minecraft:addrider": {
                    "entity_type": "test:grappling_hook_seat",
                    "spawn_event": "test:init"
                }
            },
            "test:remove": {
                "minecraft:instant_despawn": {
                    "remove_child_entities": true
                }
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [
                    "grappling_hook"
                ]
            },
            "minecraft:collision_box": {
                "height": 1.8,
                "width": 0.5
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:rideable": {
                "family_types": [
                    "grappling_hook"
                ],
                "pull_in_entities": false,
                "rider_can_interact": false,
                "crouching_skip_interact": false,
                "seat_count": 1,
                "seats":[
                    {
                        "position": [
                            0,
                            -0.1,
                            0
                        ]
                    }
                ]
            },
            "minecraft:leashable": {
                "can_be_stolen": false,
                "soft_distance": 0,
				"hard_distance": 0,
				"max_distance": 64,
                "on_unleash": {
                    "event": "test:remove",
                    "target": "self"
                }
            },
            "minecraft:environment_sensor": {
                "triggers": [
                    {
                        "filters": {
                            "all_of": [
                                { "test": "has_tag", "subject": "self", "operator": "==", "value": "Is_Retracting"},
                                { "test": "rider_count", "subject": "self", "operator": "==", "value": 0 }
                            ]
                        },
                        "event": "test:remove",
                        "target": "self"
                    }
                ]
            }
        },
        "events": {
            "test:init": {
                "add": {
                    "component_groups": [
                        "test:init",
                        "test:add_seat"
                    ]
                }
            },
            "test:reset_init": {
                "remove": {
                    "component_groups": [
                        "test:init"
                    ]
                }
            },
            "test:remove": {
                "add": {
                    "component_groups": [
                        "test:remove"
                    ]
                }
            }
        }
    }
}