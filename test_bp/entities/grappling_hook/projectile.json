{
    "format_version": "1.18.0",
    "minecraft:entity": {
        "description": {
            "identifier": "test:grappling_hook",
            "runtime_identifier": "minecraft:snowball",
            "is_summonable": true,
            "is_spawnable": false,
            "is_experimental": false,
            "animations": {
                "init_controller": "controller.animation.grappling_hook.init",
                "hit_controller": "controller.animation.grappling_hook.detect_hit",
                "check_dummy_and_seat": "animation.grappling_hook.check_for_dummy_and_seat"
            },
            "scripts": {
                "animate": [
                    "init_controller",
                    "hit_controller",
                    "check_dummy_and_seat"
                ]
            }
        },
        "component_groups": {
            "test:init": {
                "minecraft:is_charged": {}
            },
            "test:spawn_dummy": {
                "minecraft:spawn_entity": {
                    "entities":[
                        {
                            "spawn_entity": "test:grappling_hook_dummy",
                            "spawn_event": "test:init",
                            "single_use": true,
                            "should_leash": true,
                            "num_to_spawn": 1,
                            "min_wait_time": 0,
                            "max_wait_time": 0
                            
                        }
                    ]
                },
                "minecraft:timer": {
                    "time": 60.0,
                    "looping": false,
                    "time_down_event": {
                        "event": "test:remove",
                        "target": "self"
                    }
                }
            },
            "test:retracting": {
                "minecraft:is_stunned": {}
            },
            "test:remove": {
                "minecraft:instant_despawn": {
                    "remove_child_entities": true
                }
            }
        },
        "components": {
            "minecraft:type_family": {
                "family": [
                    "projectile", "grappling_hook"
                ]
            },
            "minecraft:health": {
                "value": 1,
                "max": 0
            },
            "minecraft:collision_box": {
                "height": 0.25,
                "width": 0.25
            },
            "minecraft:physics": {
                "has_collision": true,
                "has_gravity": true
            },
            "minecraft:projectile": {
                "power": 2.0,
                "gravity": 0.05,
                "inertia": 0.99,
                "should_bounce": false,
                "on_hit": {
                    "stick_in_ground": {
                        "shake_time": 0
                    },
                    "impact_damage": {
                        "damage": [
                            1, 3
                        ],
                        "destroy_on_hit": false,
                        "knockback": true,
                        "should_bounce": true
                    },
                    "definition_event": {
                        "event_trigger": {
                            "event": "test:start_retracting",
                            "target": "self"
                        }
                    }
                }
            },
            "minecraft:environment_sensor": {
                "triggers": [
                    {
                        "filters": {
                            "test": "in_lava",
                            "target": "self",
                            "operator": "==",
                            "value": true
                        },
                        "event": "test:remove",
                        "target": "self"
                    }
                ]
            },
            "minecraft:damage_sensor": {
                "triggers": [
                    {
                        "cause": "all",
                        "deals_damage": false
                    }
                ]
            } 
        },
        "events": {
            "test:init": {
                "add": {
                    "component_groups": [
                        "test:init",
                        "test:spawn_dummy"
                    ]
                }
            },
            "test:reset_init": {
                "remove": {
                    "component_groups": [
                        "test:init"
                    ]
                }
            },
            "test:start_retracting": {
                "add": {
                    "component_groups": [
                        "test:retracting"
                    ]
                }
            },
            "test:reset_retracting": {
                "remove": {
                    "component_groups": [
                        "test:retracting"
                    ]
                }
            },
            "test:remove": {
                "add": {
                    "component_groups": [
                        "test:remove"
                    ]
                }
            }
        }
    }
}